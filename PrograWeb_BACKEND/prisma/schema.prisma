generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id              Int         @id @default(autoincrement())
  rating          Float?
  image           String?
  titulo          String
  description     String?
  precio          Float
  descuento       Float?      @default(0)
  esta_oferta     Boolean?    @default(false)
  estado          Boolean?    @default(true)
  videoURL        String?
  detalleImagenes String[]
  releaseDate     DateTime?   // <<==== AGREGAR ESTO

  categoria_id    Int?
  categoria       Category?   @relation(fields: [categoria_id], references: [id])

  plataformas     PlatformOnGame[]
  ventas          Sale[]
}

model Platform {
  id        Int               @id @default(autoincrement())
  nombre    String
  juegos    PlatformOnGame[]
}

model PlatformOnGame {
  gameId     Int
  platformId Int

  game       Game      @relation(fields: [gameId], references: [id])
  platform   Platform  @relation(fields: [platformId], references: [id])

  @@id([gameId, platformId])
}

model Category {
  id      Int     @id @default(autoincrement())
  nombre  String
  juegos  Game[]
}

model User {
  id        Int      @id @default(autoincrement())
  correo    String   @unique
  password  String
  nombre    String
  token     String?
  estado    Boolean  @default(true)
  ventas    Sale[]
}

model News {
  id      Int     @id @default(autoincrement())
  titulo  String
  texto   String
  activo  Boolean @default(true)
}

model Sale {
  id            Int      @id @default(autoincrement())
  fecha         DateTime @default(now())
  usuario_id    Int
  juego_id      Int
  codigo        String
  monto_pagado  Float

  usuario       User     @relation(fields: [usuario_id], references: [id])
  juego         Game     @relation(fields: [juego_id], references: [id])
}